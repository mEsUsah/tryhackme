{# @var plugin \mesusah\crafttryhackme\TryHackMe #}
{# @var settings \mesusah\crafttryhackme\models\Settings #}

{% import '_includes/forms.twig' as forms %}
{% set countries = settings.data.countries|sort() %}

{{ forms.textField({
    first: true,
    label: 'Username',
    instructions: 'Your username on TryHackMe.',
    name: 'username',
    value: settings.username
}) }}

{{ forms.selectField({
    label: 'Country',
    instructions: 'Choose your home country.',
    id: 'country',
    name: 'country',
    options: countries,
    value: settings.country,
    order: 'desc'
}) }}

{{ forms.checkboxGroupField({
    label: 'Geographical competition group',
    instructions: 'Choose one or more options from the list.',
    id: 'countryCompetition',
    name: 'countryCompetition',
    options: countries,
    values: settings.countryCompetition
}) }}
